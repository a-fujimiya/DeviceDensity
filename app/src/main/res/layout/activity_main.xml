<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.atyk.devicedensity.MainActivity"
    >

  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="display px"
      app:layout_constraintBottom_toBottomOf="parent"
      app:layout_constraintLeft_toLeftOf="parent"
      app:layout_constraintRight_toRightOf="parent"
      app:layout_constraintTop_toTopOf="parent"
      app:layout_constraintHorizontal_bias="0.118"
      app:layout_constraintVertical_bias="0.06"
      android:id="@+id/textView"
      />
  <TextView
      android:id="@+id/display_px"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1280 x 800"
      app:layout_constraintLeft_toRightOf="@+id/textView"
      android:layout_marginStart="40dp"
      app:layout_constraintTop_toTopOf="@+id/textView"
      android:layout_marginTop="0dp"
      />
  <TextView
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="application px"
      android:layout_marginTop="24dp"
      app:layout_constraintTop_toBottomOf="@+id/textView"
      android:layout_marginStart="0dp"
      app:layout_constraintLeft_toLeftOf="@+id/textView"
      android:id="@+id/textView2"
      />
  <TextView
      android:id="@+id/application_px"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="800 x 1280"
      app:layout_constraintTop_toTopOf="@+id/textView2"
      android:layout_marginTop="0dp"
      android:layout_marginStart="0dp"
      app:layout_constraintLeft_toLeftOf="@+id/display_px"
      />
  <TextView
      android:id="@+id/density_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="1.0: 240dpi"
      app:layout_constraintTop_toTopOf="@+id/textView"
      android:layout_marginTop="0dp"
      app:layout_constraintLeft_toRightOf="@+id/display_px"
      android:layout_marginStart="40dp"
      />
  <TextView
      android:id="@+id/dpi_text_view"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:text="mdpi"
      android:layout_marginStart="0dp"
      app:layout_constraintLeft_toLeftOf="@+id/density_view"
      app:layout_constraintTop_toTopOf="@+id/application_px"
      android:layout_marginTop="0dp"
      />

</android.support.constraint.ConstraintLayout>
